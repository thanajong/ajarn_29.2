#include <stdio.h>
int main()
{
	float h[10], sum, avg;
	printf("Enter all 10 of your student heights in cm. : ");
	scanf_s("%f %f %f %f %f %f %f %f %f %f", &h[0], &h[1], &h[2], &h[3], &h[4], &h[5], &h[6], &h[7], &h[8], &h[9]);
	
  sum = 0;
	for (int i = 0; i <= 9; i++)
	{
		
		if (h[i] > 0)
		{
			sum = sum + h[i];
				if (h[i] == h[9])
				{
					avg = sum / 10;
					printf("The average heights of your students are : %f cm.\n", avg);
					printf("All heights of your students are : ");
					for (i = 0; i <= 9; i++)
					{
						printf("%f ", h[i]);
					}
				}
		}
		else
		{
			printf("error");
		}
	}
	
  return 0;
}
